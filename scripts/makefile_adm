$(contacts): $(scriptdir)/contacts.pl $(contactsdir)/*.vcf
	@echo -n "$(name).tex: "
	@$(scriptdir)/contacts.pl $(contactsdir) > $(name).tex
	@echo "OK"
	@echo -n "$(name).pdf: "
	-@pdflatex -halt-on-error $(name).tex > /dev/null
	@pdflatex -halt-on-error $(name).tex > /dev/null && echo "OK" || echo "ERROR"
	@mv $(name).pdf $@
	@chmod 664 $@
	@rm $(name).*
	@echo ""

